pipeline {
    agent any

    stages {
        stage('Build Lms') {
            steps {
                echo 'Lms Build'
                sh 'cd webapp && npm install && npm run build'
            }
        }

        stage('Publish Artifacts') {
            steps {
                script {
                    echo "Publishing artifacts"       
                    def packageJSON = readJSON file: 'webapp/package.json'
                    def packageJSONVersion = packageJSON.version 
                    
                    // Ensure the zip command exists
                    sh 'which zip || { echo "zip command not found"; exit 127; }'
                    
                    // Ensure the webapp/dist directory exists
                    sh '[ -d "webapp/dist" ] || { echo "Directory webapp/dist not found"; exit 127; }'
                    
                    sh "zip -r webapp/dist-${packageJSONVersion}.zip webapp/dist/*"
                    sh "curl -v -u admin:admin123 --upload-file webapp/dist-${packageJSONVersion}.zip http://54.237.77.36:8081/repository/lms/"
                }
            }
        }
    }
}
