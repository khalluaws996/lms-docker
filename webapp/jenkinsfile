pipeline {
    agent any

    environment {
        repositoryURL = "http://54.172.190.173:8081/repository/lms/"
        downloadDirectory = "/tmp" // Specify a different directory for artifact download if needed
        deploymentLocation = "/opt/lms" // Specify the deployment location
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                deleteDir()
            }
        }
        
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build LMS') {
            steps {
                echo 'Building LMS...'
                dir('webapp') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Publish Artifacts') {
            steps {
                script {
                    echo "Publishing artifacts"
                    def packageJSON = readJSON file: 'webapp/package.json'
                    def packageJSONVersion = packageJSON.version 
                    
                    def zipFileName = "webapp/dist-${packageJSONVersion}.zip"
                    sh "zip -r ${zipFileName} webapp/dist/*"
                    
                    def curlCommand = "curl -v -u admin:admin123 --upload-file ${zipFileName} ${repositoryURL}${zipFileName}"
                    
                    def maxRetries = 6
                    def retryCount = 0
                    def success = false

                    while (retryCount < maxRetries && !success) {
                        try {
                            sh curlCommand
                            success = true
                        } catch (Exception e) {
                            echo "Upload attempt ${retryCount + 1} failed. Retrying..."
                            echo "Error: ${e}"
                            retryCount++
                            sleep(time: 10, unit: 'SECONDS') // Wait before retrying
                        }
                    }

                    if (!success) {
                        error("Failed to upload the artifact after ${maxRetries} attempts")
                    }
                }
            }
        }

        stage('Download Artifact') {
            steps {
                echo 'Downloading artifact...'
                sh "wget ${repositoryURL}artifact.zip -P ${downloadDirectory}"
            }
        }
        
        stage('Deploy LMS') {
            steps {
                echo 'Deploying LMS...'
                try {
                    sh "unzip ${downloadDirectory}/artifact.zip -d ${deploymentLocation}"
                    sh "${deploymentLocation}/start.sh"
                } catch (Exception e) {
                    echo "Deployment failed: ${e}"
                    currentBuild.result = 'FAILURE'
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
