pipeline {
    agent any

    stages {
        stage('sonar analysis') {
            steps {
                echo 'CODE QUALITY CHECK'
                
                script {
                    try {
                        sh '''
                            cd webapp
                            echo "Current directory: $(pwd)"
                            echo "Listing directory contents:"
                            ls -l
                            sudo docker run --rm -e SONAR_HOST_URL="http://18.206.207.0:9000" -v "$(pwd):/usr/src" -e SONAR_TOKEN="sqp_6e3afa8a58b1761d40a0e841e1c62ade05813cc8" sonarsource/sonar-scanner-cli -Dsonar.projectKey=lms
                        '''
                    } catch (Exception err) {
                        echo "Error: ${err}"
                        error "Sonar analysis failed"
                    }
                }

                echo 'CODE QUALITY COMPLETED'   
            }
        }
    }
}
