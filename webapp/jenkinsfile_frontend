pipeline {
    agent {
      label 'docker'
    }

    environment {

    DOCKERHUB_CREDENTIALS = credentials('dockeruser')
     registry = "khalandarbasha996/lms-fe"
        registryCredential = 'dockeruser'
    }

    stages {
        

        stage('Building the docker image') {
            steps {
                sh 'cd webapp && docker build -t khalandarbasha996/lms-fe .'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') {
            steps {
                  sh 'docker push khalandarbasha996/lms-fe'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'docker rmi -f khalandarbasha996/lms-fe'
            }
        }
         stage('Running the docker container') {
            steps {
                  sh 'docker container rm --force fe'
                  sh 'docker run -dt -p 8000:80 --name fe khalandarbasha996/lms-fe'
            }
        }
    }
}
